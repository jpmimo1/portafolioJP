---
import { ContentPage } from "../../data";
import type { LanguagesContent } from "../../types/content";
import EmailCopy from "../EmailCopy";
import ButtonComplete from "../basic/ButtonComplete";
import IconButton from "../basic/IconButton";

interface Props {
  language: LanguagesContent;
}

const { language } = Astro.props;

const { title, paragraph, nameInput, emailInput, messageInput, sendText } =
  ContentPage[language].contactContent;
---

<section class="bg-white py-12 relative">
  <div id="contact-section" class="absolute bottom-full h-16"></div>
  <div class="px-4">
    <h3 class="text-primary-700 text-4xl mb-5">{title}</h3>
    <p class="mb-7">{paragraph}</p>
    <div class="flex justify-between items-center mb-5">
      <div class="flex gap-2">
        <IconButton typeElement="a" icon="iconportafoliojp-github" />
        <IconButton typeElement="a" icon="iconportafoliojp-linkedin" />
      </div>
      <EmailCopy language={language} client:visible />
    </div>
    <form>
      <div class="flex flex-col gap-3">
        <div class="grid grid-cols-1 gap-3">
          <div class="flex flex-col">
            <label for="full-name-input">
              {nameInput.label}
              <span class="text-red-600">*</span>
            </label>
            <input
              id="full-name-input"
              class="border-auxiliar1-200 focus-visible:outline-primary-700 border px-2 py-1 rounded-md placeholder:text-auxiliar1-200"
              type="text"
              placeholder={nameInput.placeholder}
              required
            />
          </div>
          <div class="flex flex-col">
            <label for="email-input">
              {emailInput.label}
              <span class="text-red-600">*</span>
            </label>
            <input
              type="email"
              id="email-input"
              class="border-auxiliar1-200 focus-visible:outline-primary-700 border px-2 py-1 rounded-md placeholder:text-auxiliar1-200"
              type="text"
              placeholder={emailInput.placeholder}
              required
            />
          </div>
        </div>
        <div class="flex flex-col">
          <label for="message-input">
            {messageInput.label}
            <span class="text-red-600">*</span>
          </label>
          <textarea
            id="message-input"
            class="border-auxiliar1-200 focus-visible:outline-primary-700 border px-2 py-1 rounded-md placeholder:text-auxiliar1-200 h-32"
            placeholder={messageInput.placeholder}
            required></textarea>
        </div>
        <ButtonComplete
          typeElement="button"
          type="submit"
          text={sendText}
          icon1="iconportafoliojp-send"
          size="s"
        />
      </div>
    </form>
  </div>
</section>

---
import { ContentPage } from "../../data";
import type { LanguagesContent } from "../../types/content";

interface Props {
  language: LanguagesContent;
}

const { language } = Astro.props;

const { title1, title2, paragraph1, paragraph2, finalMessage } =
  ContentPage[language].aboutMeContent;
---

<section class="bg-auxiliar1-200 py-12 relative">
  <div id="about-section" class="absolute bottom-full h-16"></div>
  <div class="flex flex-col px-4">
    <h3 class="text-primary-700 text-4xl mb-5">{title1}</h3>
    <p class="mb-7">{paragraph1}</p>
    <h3 class="text-primary-700 text-3xl text-center mb-3">{title2}</h3>
    <p class="mb-6">{paragraph2}</p>
    <p>{finalMessage}</p>
  </div>
</section>

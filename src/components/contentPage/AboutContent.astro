---
import { ContentPage } from "../../data";
import type { LanguagesContent } from "../../types/content";

interface Props {
  language: LanguagesContent;
}

const { language } = Astro.props;

const { title1, title2, paragraph1, paragraph2, finalMessage } =
  ContentPage[language].aboutMeContent;
---

<section class="bg-auxiliar1-200 dark:bg-slate-600 py-12 lg:py-24 relative">
  <div id="about-section" class="absolute bottom-full h-16 lg:h-20"></div>
  <div class="flex flex-col px-4 max-w-screen-xl mx-auto lg:px-8">
    <div>
      <h3
        class="text-primary-700 dark:text-primary-200 text-4xl lg:text-5xl mb-5 lg:mb-8"
      >
        {title1}
      </h3>
      <p class="mb-7 lg:mb-12 dark:text-white">{paragraph1}</p>
    </div>
    <div>
      <h3
        class="text-primary-700 dark:text-primary-200 text-3xl text-center mb-3 lg:mb-8"
      >
        {title2}
      </h3>
      <p class="mb-6 lg:mb-11 dark:text-white">{paragraph2}</p>
      <p class="dark:text-white">{finalMessage}</p>
    </div>
  </div>
</section>
